pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        

        stage('Setup Python Environment') {
            steps {
                script {
                    bat 'py -m venv %VIRTUAL_ENV%'
                    bat 'call %VIRTUAL_ENV%\\Scripts\\activate'
                }
            }
        }

        stage('Run Python Script') {
            steps {
                script {
                    bat 'call %VIRTUAL_ENV%\\Scripts\\activate && py Main_python.py'
                }
            }
        }

        stage('Clean Up') {
            steps {
                bat 'rmdir /s /q %WORKSPACE%'
            }
        }
    }
}
